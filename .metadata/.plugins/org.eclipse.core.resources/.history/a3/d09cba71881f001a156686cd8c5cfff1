package jaxb;

import java.io.File;
import java.util.ArrayList;
import java.util.List;

import javax.xml.bind.JAXBContext;
import javax.xml.bind.JAXBException;
import javax.xml.bind.Marshaller;

public class Main {

	public static void main(String[] args) {

		marshall();

	}
	
	private static void marshall() {
		
		Employee employee = new Employee(1,"Halil Ä°brahim Muktar", new Department(100,"Jr.Java Developer"));
		
		List<Employee> list = new ArrayList<>();
		
		list.add(employee);
		
		EmployeeWrapper wrapper = new EmployeeWrapper();
		wrapper.setEmployees(list);
		
		long marshallStart = System.currentTimeMillis();

		try {
			JAXBContext jaxbContext = JAXBContext.newInstance(EmployeeWrapper.class);
			Marshaller marshaller = jaxbContext.createMarshaller();
			marshaller.setProperty(Marshaller.JAXB_FORMATTED_OUTPUT, true);
			marshaller.marshal(wrapper, new File("src\\output\\employee.json"));
			
		}catch(JAXBException e) {
			e.printStackTrace();
		}

		long marshallEnd = System.currentTimeMillis();

	    System.out.println("Marshalling parse time: " + (marshallEnd-marshallStart) + "ms");
	}
}
