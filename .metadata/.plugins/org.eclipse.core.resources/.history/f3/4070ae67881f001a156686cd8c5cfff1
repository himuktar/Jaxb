package jaxb;

import java.io.File;
import java.util.ArrayList;
import java.util.List;

import javax.xml.bind.JAXBContext;
import javax.xml.bind.JAXBException;
import javax.xml.bind.Marshaller;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	private static void marshall() {
		
		Employee employee = new Employee(1,"Halil İbrahim Muktar", new Department(100,"Jr.Java Developer"));
		
		List<Employee> list = new ArrayList<>();
		
//		for (int i = 0; i < 10000; i++) {
//			list.add(employee);
//		}
		list.add(employee);
		
		EmployeeWrapper wrapper = new EmployeeWrapper();
		wrapper.setEmployees(list);
		
		long marshallStart = System.currentTimeMillis();

		try {
			JAXBContext jaxbContext = JAXBContext.newInstance(EmployeeWrapper.class);
			
			Marshaller marshaller = jaxbContext.createMarshaller();
			
			marshaller.setProperty(Marshaller.JAXB_FORMATTED_OUTPUT, true); // Formatı düzgün çıktı almak için JAXB_FORMATTED_OUTPUT'u true setleriz.
			
			marshaller.marshal(wrapper, new File("C:\\Users\\ibrahim.muktar\\Desktop\\employee.json"));
			
		}catch(JAXBException e) {
			e.printStackTrace();
		}

		long marshallEnd = System.currentTimeMillis();

	    System.out.println("Marshalling parse time: " + (marshallEnd-marshallStart) + "ms");
	}
}
